---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";
import { WIDTHS } from "~src/consts";

interface Props {
    image: ImageMetadata;
    alt: string;
    accent: Accent;
}
const { image, alt, accent } = Astro.props;
const bg = `var(--accent-${accent})`;
---

<article>
    <Image src={image} alt={alt} widths={WIDTHS} height="200" width="300" />
    <div class="content">
        <slot />
    </div>
</article>

<style define:vars={{ bg }}>
    article {
        display: flex;
        align-items: center;
        max-width: 65rem;

        background-color: var(--bg);
        border-radius: var(--element-border-radius);

        --outline-width: calc(0.25 * var(--element-padding));
    }
    img {
        border-radius: var(--element-border-radius);
        outline: var(--outline-width) solid var(--background);
        height: 100%;
    }
    .content {
        display: flex;
        flex-direction: column;
        gap: 1rem;

        padding: var(--element-padding);
    }

    @media screen and (width >= 50em) {
        .content {
            padding-inline-start: calc(
                var(--element-padding) + var(--outline-width)
            );
        }
    }
    @media screen and (width < 50em) {
        article {
            flex-direction: column;
        }
        .content {
            padding-block-start: calc(
                var(--element-padding) + var(--outline-width)
            );
        }
        img {
            width: 100%;
            height: 200px;
        }
    }
</style>
