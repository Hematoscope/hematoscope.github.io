---
import Icon from "~src/components/Icon.astro";
---

<footer>
  <div class="contents">
    <p>
      <strong>Cellbytes</strong><br />
      Â© Cellbytes Ltd.<br />
      All rights reserved
    </p>

    <ul role="list">
      <li>
        <a href="/" aria-label="Cellbytes in Github">
          <Icon name="social/github" />
        </a>
      </li>
      <li>
        <a href="/" aria-label="Cellbytes in Facebook">
          <Icon name="social/facebook" />
        </a>
      </li>
      <li>
        <a href="/" aria-label="Cellbytes email">
          <Icon name="social/email" />
        </a>
      </li>
      <li>
        <a href="/" aria-label="Cellbytes in LinkedIn">
          <Icon name="social/linkedin" />
        </a>
      </li>
    </ul>

    <div class="links">
      <a href="/privacy-policy">Privacy policy</a>
      <a href="/equality-policy">Equality policy</a>
    </div>
  </div>
</footer>

<style>
  footer {
    grid-column: full;
    display: grid;
    grid-template-columns: subgrid;
    background-color: var(--footer-background);
    min-height: 16rem;
  }
  .contents {
    grid-column: content;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  p,
  a {
    color: var(--background);
  }
  ul {
    list-style: none;
    display: flex;
    align-items: center;
    gap: 2em;
  }

  div.links {
    display: flex;
    flex-direction: column;
    gap: 0.5em;
  }

  @media screen and (width < 50em) {
    .contents {
      flex-direction: column;
      padding-block: calc(2 * var(--element-padding));
      gap: var(--element-padding);
    }
  }
</style>
